{
  "version": 2,
  "builds": [
    { "src": "dist/reshop-ng/browser/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },

    { "src": "/(.*)", "dest": "dist/reshop-ng/browser/index.html" }
  ]
}
